{
  "compilerOptions": {
    "types": ["bun-types"],
    "lib": ["esnext"],
    "outDir": "build",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "experimentalDecorators": true,
    "moduleDetection": "force",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@kitajs/html/register": ["src/index.d.ts"],
      "@kitajs/html": ["src/index.d.ts"],
      "@/*": ["./*"]
    }
  },
  "exclude": ["prisma/seed.ts", "./tailwind.config.js"],
  "include": ["./src/**/*"]
}
